@model IEnumerable<InventoryManagement.Models.BinModel>

@{
    ViewBag.Title = "Bins";
}

<h2>Bins</h2>

@if (TempData["errorMessage"] != null)
{
    <p class="alert alert-danger">
        @TempData["errorMessage"]
    </p>
}

<p>
    @Html.ActionLink("Add Bin", "AddBin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BinID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BinName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BinID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BinName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBin", new { id = item.BinID }) |
                @Html.ActionLink("Details", "BinDetails", new { id = item.BinID }) |
                @Html.ActionLink("Delete", "DeleteBin", new { id = item.BinID })
            </td>
        </tr>
    }

</table>
