@model IEnumerable<InventoryManagement.Models.OrderLinesModel>
@using DataLibrary.Models

@{
    var orderModel = (OrderModel)ViewBag.Order;
    ViewBag.Title = "Order Lines";
}

<h2>Order @orderModel.OrderID</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Order ID")
        </dt>

        <dd>
            @orderModel.OrderID
        </dd>

        <dt>
            @Html.DisplayName("Order Number")
        </dt>

        <dd>
            @orderModel.OrderNumber
        </dd>

        <dt>
            @Html.DisplayName("Date Ordered")
        </dt>

        <dd>
            @orderModel.DateOrdered.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayName("Customer Name")
        </dt>

        <dd>
            @orderModel.CustomerName
        </dd>

        <dt>
            @Html.DisplayName("Customer Address")
        </dt>

        <dd>
            @orderModel.CustomerAddress
        </dd>

    </dl>
</div>

<p>
    <a href="/OrderLines/AddOrderLines/@orderModel.OrderID">Add Order Line</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderLineID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QTY)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderLineID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QTY)
            </td>
            <td>
                <a href="../EditOrderLines/@orderModel.OrderID/@item.OrderLineID ">Edit</a> |
                <a href="../DeleteOrderLines/@orderModel.OrderID/@item.OrderLineID ">Delete</a>
            </td>
        </tr>
    }

</table>
